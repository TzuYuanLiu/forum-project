<% like = @post.find_my_like(current_user) %>

 <% if like %>
   <%= link_to "-1", post_like_path(@post, like), :method => :delete, :class => "btn btn-danger", :remote => true  %>
 <% else %>
   <%= link_to "+1", post_likes_path(@post), :method => :post, :class => "btn btn-primary", :remote => true  %>
 <% end %>