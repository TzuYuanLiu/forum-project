
<div class="pull-right">
Order by: 
<%= link_to "last comment", posts_path(:order => "last_comment_time") %> ｜
<%= link_to "most comment", posts_path(:order => "comments_count") %> ｜
<%= link_to "Title", posts_path(:order => "title" ) %>
</div>

<div class="clearfix"></div>



<%= search_form_for @q do |f| %>

  <%= f.label :title_cont %>
  <%= f.search_field :title_cont %>

  <%= f.submit %>

<p>

sort by: 
<% Category.all.each do |c| %>
 <%= link_to c.name, posts_path( :cid => c ) %> |
 <% end %>

</p>

<% end %>


<% @posts.each do |p| %>
	<table class="table">
		<tr>
			<td>
				<h1>
					<%= link_to p.title, post_path(p) %>
				</h1>
				Published at
				<%= p.created_at %>
				by
				<%= p.user.try(:short_name) %>
			</td>
			<td>
				This post has 
				<%= p.comments_count %>
				comments
			</td>		
			<td>
				<% if current_user %>
				<%= link_to 'edit', edit_post_path(p), :class => "btn btn-default" %>
				<%= link_to 'delete', post_path(p), :method => :delete, :class => "btn btn-default" %>
				<% end %>
			</td>	
		</tr>
	</table>		
<% end %>

	<%= link_to "new post", new_post_path, :class => "btn btn-default"  %>

	<%= paginate @posts %>
	
	

